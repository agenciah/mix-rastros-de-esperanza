# syntax = docker/dockerfile:1

# Usa la versi√≥n de Node.js que necesitas
ARG NODE_VERSION=20.19.0
FROM node:${NODE_VERSION}-slim AS base

LABEL fly_launch_runtime="Node.js"

WORKDIR /app

# Establece el entorno de producci√≥n
ENV NODE_ENV="production"

# Etapa de construcci√≥n para instalar dependencias
FROM base AS build
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y build-essential node-gyp pkg-config python-is-python3

COPY package-lock.json package.json ./
RUN npm ci

COPY . .

# Etapa final de producci√≥n
FROM base

# Copia la aplicaci√≥n y las dependencias de la etapa de construcci√≥n
COPY --from=build /app /app

# üóëÔ∏è ELIMINADO: Ya no necesitamos crear el directorio /data ni el volumen para SQLite

# Expone el puerto que nuestra app usa internamente
EXPOSE 3000

# üóëÔ∏è ELIMINADO: ¬°La l√≠nea que sobrescrib√≠a nuestra DATABASE_URL!

# ‚úÖ CORREGIDO: El comando de arranque simple y est√°ndar para una app de Node.js
CMD [ "node", "server.js" ]